<% provide(:title, "HomePage") %>

<html class="index-background">
    <div class="index-tran-box">
      <div class="index-box">
        <div class="index-header"> <%= link_to "FoodnTrip", root_path, :class => "index-header-title" %> </div>
        <div class="index-slogan"> SLOGAN*SLOGAN*SLOGAN</div>

        <div class="login-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.label :email, "Username / Email Address" %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, :placeholder => "Email", :class => "login-input-field" %>
            </div>
            <%= f.label :password %>
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class => "login-input-field" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field center">
                <%= f.check_box :remember_me %>
                <%= f.label "Remember my email on this computer." %>
              </div>
            <% end -%>

            <div class='center'>
              <%= f.submit "Sign In", :class => "btn bds-btn-primary-lrg login-btn" %>
            </div>
          <% end %>

          <div class="devise-shared-links">
            <%= render "devise/shared/links" %>
          </div>
        </div>


      </div>
    </div>
</html>
